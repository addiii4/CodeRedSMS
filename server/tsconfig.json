{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2021",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "declaration": false,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false
    },
    "include": ["src/**/*", "prisma/**/*"]
}